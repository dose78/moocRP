<link rel="stylesheet" href="/linker/styles/password.css">

<div class="container">
    <form action="/researcher/updatePassword" method="POST" class="form-signin">

        <% if(flash && flash.err) { %>
        <ul class="alert alert-success">
            <% Object.keys(flash.err).forEach(function(error) { %>
            <li><%- JSON.stringify(flash.err[error]) %></li>
            <% }) %>
        </ul>
        <% } %>

        <h2 class="form-signin-heading">change password</h2>
        <input type="password" name="old-password" class="form-control" placeholder="old password" required autofocus>
        <input type="password" name="new-password" class="form-control" placeholder="new password" required>
        <input type="password" name="confirmation" class="form-control" placeholder="confirmation" required>
        <button class="btn btn-lg btn-success btn-block" type="submit">submit</button>
    </form>
</div>
